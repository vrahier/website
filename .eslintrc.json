{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "array-bracket-spacing": 1,
        "arrow-spacing": 2,
        "block-spacing": 1,
        "comma-spacing": 2,
        "computed-property-spacing": 1,
        "func-call-spacing": 2,
        "generator-star-spacing": 1,
        "key-spacing": 2,
        "keyword-spacing": 2,
        "object-curly-spacing": [2, "always"],
        "rest-spread-spacing": 1,
        "semi-spacing": 1,
        "switch-colon-spacing": 1,
        "template-curly-spacing": 1,
        "template-tag-spacing": 1,
        "yield-star-spacing": 1
    }
}
